
<div class="container content-container">

  <h1 class="profiles-title"><%= @profile.username %> <br><small><%= @profile.email %></small></h1>
  
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h3>Your Vehicles</h3>
      
      <table>
        <tr>
          <th>Plate</th>
          <th>Brand</th>
          <th>Model</th>
          <th>Color</th>
        </tr>
        <% @profile.vehicles.each do |vehicle| %>
          <tr>
            <td><%= vehicle.plate %></td>
            <td><%= vehicle.car_brand.brand %></td>
            <td><%= vehicle.car_model.car_model %></td>
            <td><%= vehicle.color %></td>
            <td>
              <%= link_to edit_vehicle_path(vehicle), remote: true do  %>
                <span class="glyphicon glyphicon-edit"></span> Editar
              <% end %>
              <%= link_to vehicle_path(vehicle), method: :delete do %>
                <span class="glyphicon glyphicon-remove"></span> Eliminar
              <% end %>
            </td>
          </tr>

        <% end %>

      </table>
    </div>
  </div>

</div>